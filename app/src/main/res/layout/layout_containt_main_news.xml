<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
   xmlns:app="http://schemas.android.com/apk/res-auto"
   xmlns:tools="http://schemas.android.com/tools"
   android:layout_width="match_parent"
   android:layout_height="match_parent"
   android:background="@color/white"
   app:layout_behavior="@string/appbar_scrolling_view_behavior"
   tools:context=".activity.EventDetailActivity">

    <LinearLayout
            android:layout_marginBottom="@dimen/dimens_12"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dimens_16"
            android:layout_marginRight="@dimen/dimens_16"
            android:layout_marginTop="@dimen/dimens_20"
            android:orientation="vertical">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="fill_vertical"
                android:orientation="horizontal">

            <TextView

                    android:id="@+id/tvPlace"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textColor="@color/dark_jungle_green"
                    android:textSize="@dimen/text_15"
                    tools:text="Shevage darana," />

            <TextView
                    android:paddingLeft="@dimen/dimens_4"
                    android:id="@+id/tvSource"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textColor="@color/dark_gray"
                    android:textSize="@dimen/text_13"
                    tools:text="Khasdar sahayak" />

            <TextView
                    android:id="@+id/tvDate"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/dimens_8"
                    android:gravity="right|center"
                    android:textColor="@color/manatee"
                    android:textSize="@dimen/text_15"
                    tools:text="Friday, 25 May" />
        </LinearLayout>

        <TextView
                android:visibility="gone"
                android:id="@+id/tvtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimens_16"
                android:textColor="@color/dark_jungle_green"
                android:textSize="@dimen/text_16"
                tools:text="Prakash Javadekar Rejects Horse-Trading Accusations Against BJP" />

        <TextView
                android:id="@+id/tvShortDecription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimens_16"
                android:textColor="@color/dark_gray"
                android:textSize="@dimen/text_16"
                android:textStyle="bold"
                tools:text="Sed ut perspiciatis unde omnis iste natus error sit voluptatem accusantium doloremque laudan tium, Sed ut perspiciatis unde omnis iste natus error sit voluptatem accusantium doloremque laudan tium, " />

        <TextView

                android:id="@+id/tvDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimens_10"
                android:text="Sed ut perspiciatis unde omnis iste natus error sit voluptatem accusantium doloremque laudan tium, totam rem aperiam, eaque ipsa quae ab illo inventore veritatis et quasi architecto beata e vitae dicta sunt explicabo. Nemo enim ipsam voluptatem quia voluptas sit aspernatur aut odit aut fugit, sed quia. Sed ut perspiciatis unde omnis iste natus error sit voluptatem accusantium doloremque laudan tium, Sed ut perspiciatis unde omnis iste natus error sit voluptatem accusantium doloremque laudan tium, Sed ut perspiciatis unde omnis iste natus error sit voluptatem accusantium doloremque laudan tium, Sed ut perspiciatis unde omnis iste natus error sit voluptatem accusantium doloremque laudan tium, Sed ut perspiciatis unde omnis iste natus error sit voluptatem accusantium doloremque laudan tium, "
                android:textColor="@color/dark_gray"
                android:textSize="@dimen/text_15" />

    </LinearLayout>

</androidx.core.widget.NestedScrollView>


